---
import Layout from '../layouts/Layout.astro';
import Portfolio from '../components/Portfolio.jsx';

---

<Layout title="My Portfolio">
  <main>
    <Portfolio client:visible />
  </main>
</Layout>




<style>
  main {
    width: 100%;
    margin: 0;
    padding: 0;
  }
  .project-card {
  perspective: 1000px; /* Tambahkan ini untuk efek 3D */
}

.fade-in {
  opacity: 0;
  transition: opacity 0.8s ease-in-out;
}

.fade-in.opacity-1 {
  opacity: 1;
}


</style>